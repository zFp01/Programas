import colorama as cr

class Caneta:
  def __init__(self,cor):
    self.cor = cor
  def escrever(self,mensagem):
    print(f"{self.cor}{mensagem}{cr.Fore.WHITE}")

minhaCaneta = Caneta(cr.Fore.GREEN)
minhaCaneta.escrever("Python + C# = <3")

print("Oi...")

minhaCaneta.escrever("blebleblebleble")

minhaCaneta.cor = cr.Fore.BLACK
minhaCaneta.escrever("=)")
